{

  "markdownlint.config": {
    "default": true,
    "line_length": false,
    "blank_lines": false,
  },

  "yaml.schemas": {
     "kubernetes": "/*.yaml"
  },

  "suggest.floatConfig.border": true,
  "hover.floatConfig.border": true,

  "diagnostic.floatConfig": {
    // :help coc-config-float
    "border": true,
    "maxHeight": 10,
    "maxWidth": 30,
    "winblend": 10,
    "close": true
  },


  "diagnostic-languageserver.filetypes": {
    "python": ["pylint", "flake8"]
  },
  "diagnostic-languageserver.linters": {
    "pylint": {
      "sourceName": "pylint",
      "command": "pylint",
      "args": [
        "--disable=E0401,bare-except,invalid-name,logging-fstring-interpolation,broad-except,consider-using-f-string,missing-module-docstring,line-too-long,consider-using-sys-exit,logging-format-interpolation,missing-function-docstring,unspecified-encoding",
        "--output-format",
        "text",
        "--score",
        "no",
        "--msg-template",
        "'{line}:{column}:{category}:{msg} ({msg_id}:{symbol})'",
        "%file"
      ],
      "formatPattern": [
        "^(\\d+?):(\\d+?):([a-z]+?):(.*)$",
        {
          "line": 1,
          "column": 2,
          "security": 3,
          "message": 4
        }
      ],
      "rootPatterns": [".git", "pyproject.toml", "setup.py", "requirements.txt"],
      "securities": {
        "informational": "hint",
        "refactor": "info",
        "convention": "info",
        "warning": "warning",
        "error": "error",
        "fatal": "error"
      },
      "offsetColumn": 1,
      "formatLines": 1
    },

    "flake8": {
      "sourceName": "flake8",
      "command": "flake8",
      "debounce": 200,
      "rootPatterns": [".git", "pyproject.toml", "setup.py"],
      "args": [
        "--ignore",
        "W391,E501",
        "--format=%(row)d,%(col)d,%(code).1s,%(code)s: %(text)s",
        "-"
      ],
      "offsetLine": 0,
      "offsetColumn": 0,
      "formatLines": 1,
      "formatPattern": [
        "(\\d+),(\\d+),([A-Z]),(.*)(\\r|\\n)*$",
        {
          "line": 1,
          "column": 2,
          "security": 3,
          "message": 4
        }
      ],
      "securities": {
        "W": "info",
        "E": "warning",
        "F": "info",
        "C": "info",
        "N": "hint"
      }
    }
  },

  // do not pin this, otherwise it will not work on Linux out of the box
  // to install it on Mac OS/Darwin run:
  // :CocCommand clangd.install
  // "clangd.path": "~/.config/coc/extensions/coc-clangd-data/install/15.0.6/clangd_15.0.6/bin/clangd"
}
